{
  "name": "birthday-slack-bot",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "docker-compose up -d && sst dev",
    "build": "sst build",
    "deploy": "sst deploy",
    "remove": "sst remove",
    "console": "sst console",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "typecheck:core": "tsc --noEmit --project packages/core/tsconfig.json",
    "typecheck:functions": "tsc --noEmit --project packages/functions/tsconfig.json",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "prepare": "husky install",
    "test": "vitest watch",
    "test:unit": "vitest run unit",
    "test:integration": "vitest run integration --threads false --single-thread",
    "test:ci": "vitest run --threads false --single-thread ",
    "migration:generate": "cd packages/core && pnpm migration:generate",
    "migration:local": "tsx scripts/migrateLocal.ts",
    "migration:ci": "tsx scripts/migrateCi.ts"
  },
  "dependencies": {
    "sst": "^2.28.1"
  },
  "devDependencies": {
    "@aws-sdk/client-eventbridge": "^3.429.0",
    "@aws-sdk/client-lambda": "^3.438.0",
    "@aws-sdk/client-scheduler": "^3.441.0",
    "@slack/bolt": "^3.14.0",
    "@theapexlab/serverless-icebreaker": "^1.1.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/aws-lambda": "^8.10.124",
    "@types/pg": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "aws-cdk-lib": "2.95.1",
    "constructs": "10.2.69",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.6",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-define-config": "^1.24.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "mockdate": "^3.0.5",
    "pg": "^8.11.3",
    "prettier": "^3.0.3",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  }
}
